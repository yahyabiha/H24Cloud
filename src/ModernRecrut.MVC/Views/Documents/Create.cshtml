@using ModernRecrut.MVC.Entites;
@model ModernRecrut.MVC.Models.Document

@{
	ViewData["Title"] = "Create";
}

<h1>Ajout</h1>

<div class="row">
    <div class="col-md-4">
		<form method="post" enctype="multipart/form-data" asp-action="Create">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="DocumentDetails" class="control-label"></label>
				<input asp-for="DocumentDetails" class="form-control" />
				<span asp-validation-for="DocumentDetails" class="text-danger" />
			</div>
			<div class="form-group">
				<label asp-for="DocumentType" class="form-control" />
                <select asp-for="DocumentType" asp-items="Html.GetEnumSelectList<DocumentType>()" class="form-control"></select>
				<span asp-validation-for="DocumentType" class="text-danger" />
			</div>
			<div class="form-group">
				<input type="submit" value="Upload" />
			</div>
		</form>
    </div>
</div>
